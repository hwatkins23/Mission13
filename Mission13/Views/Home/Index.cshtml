@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

@if (Model.Count() > 10)
{
    <h1>View the list of all bowlers!</h1>
} 
else if(Model.Count() == 0)
            {
                <h1>No players are on this team</h1>
            }
else
{
    <h1>View the roster for the @Model.First().TeamName.TeamName</h1>
}


<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
            <td>Team Name</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
           <tr>
               <td>@b.BowlerFirstName</td>
               <td>@b.BowlerMiddleInit</td>
               <td>@b.BowlerLastName</td>
               <td>@b.BowlerAddress</td>
               <td>@b.BowlerCity</td>
               <td>@b.BowlerState</td>
               <td>@b.BowlerZip</td>
               <td>@b.BowlerPhoneNumber</td>
               <td>@b.TeamName.TeamName</td>
               <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid ="@b.BowlerID">Edit</a></td>
               <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid ="@b.BowlerID">Delete</a></td>

           </tr>
        }
    </tbody>
</table>